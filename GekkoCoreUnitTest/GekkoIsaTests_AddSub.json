{
	"info":
	{
		"description": "Gekko ISA testing rules. Integer Arithmetic Instructions (Add/Sub)"
	},

	"rules":
	[

		{
			"instr": "add",
			"param": [ {"r": 1}, {"r": 2}, {"r": 3} ],
			"before": [
				{ "pc": "0x80000000" },
				{ "r1": "0xff" },
				{ "r2": "0x12345678" },
				{ "r3": "0xABCDEF12" }
			],
			"expected": [
				{ "pc": "0x80000004" },
				{ "r1": "0xBE02458A" }
			]
		},

		{
			"instr": "add.",
			"param": [ {"r": 1}, {"r": 2}, {"r": 3} ],
			"notes": "Result < 0, no overflow",
			"before": [
				{ "pc": "0x80000000" },
				{ "r1": "0xff" },
				{ "r2": -5 },
				{ "r3": -6 }
			],
			"expected": [
				{ "pc": "0x80000004" },
				{ "r1": -11 },
				{ "CR0[LT]": 1 },
				{ "XER[SO]": 0 },
				{ "XER[OV]": 0 }
			]
		},
		{
			"instr": "add.",
			"param": [ {"r": 1}, {"r": 2}, {"r": 3} ],
			"notes": "Result > 0, no overflow",
			"before": [
				{ "pc": "0x80000000" },
				{ "r1": "0xff" },
				{ "r2": 1 },
				{ "r3": 2 }
			],
			"expected": [
				{ "pc": "0x80000004" },
				{ "r1": 3 },
				{ "CR0[GT]": 1 },
				{ "XER[SO]": 0 },
				{ "XER[OV]": 0 }
			]
		},
		{
			"instr": "add.",
			"param": [ {"r": 1}, {"r": 2}, {"r": 3} ],
			"notes": "Result == 0, no overflow",
			"before": [
				{ "pc": "0x80000000" },
				{ "r1": "0xff" },
				{ "r2": 0 },
				{ "r3": 0 }
			],
			"expected": [
				{ "pc": "0x80000004" },
				{ "r1": 0 },
				{ "CR0[EQ]": 1 },
				{ "XER[SO]": 0 },
				{ "XER[OV]": 0 }
			]
		},
		{
			"instr": "add.",
			"param": [ {"r": 1}, {"r": 2}, {"r": 3} ],
			"notes": "Result Overflow. Overflow is copied from XER[SO] <- 0",
			"before": [
				{ "pc": "0x80000000" },
				{ "r1": "0xff" },
				{ "r2": "0x7fffffff" },
				{ "r3": "0x7fffffff" }
			],
			"expected": [
				{ "pc": "0x80000004" },
				{ "r1": "0xFFFFFFFE" },
				{ "CR0[SO]": 0 },
				{ "XER[SO]": 0 },
				{ "XER[OV]": 0 }
			]
		},
		{
			"instr": "add.",
