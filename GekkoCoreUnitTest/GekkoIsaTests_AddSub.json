			"notes": "Result Overflow. Overflow is copied from XER[SO] <- 1",
			"before": [
				{ "pc": "0x80000000" },
				{ "r1": "0xff" },
				{ "r2": "0x7fffffff" },
				{ "r3": "0x7fffffff" },
				{ "XER[SO]": 1 }
